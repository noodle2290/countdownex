<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/startButton1"
        android:layout_width="207dp"
        android:layout_height="52dp"
        android:layout_marginTop="200dp"
        android:text="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hour_edit_text" />

    <EditText
        android:id="@+id/second_edit_text"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/text_view_2"
        app:layout_constraintTop_toTopOf="@+id/minute_edit_text" />

    <TextView
        android:id="@+id/text_view_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=":"
        app:layout_constraintBottom_toBottomOf="@+id/minute_edit_text"
        app:layout_constraintStart_toEndOf="@+id/minute_edit_text"
        app:layout_constraintTop_toTopOf="@+id/minute_edit_text" />

    <EditText
        android:id="@+id/minute_edit_text"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/text_view_1"
        app:layout_constraintTop_toTopOf="@+id/hour_edit_text" />

    <TextView
        android:id="@+id/text_view_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=":"
        app:layout_constraintBottom_toBottomOf="@+id/hour_edit_text"
        app:layout_constraintStart_toEndOf="@+id/hour_edit_text"
        app:layout_constraintTop_toTopOf="@+id/hour_edit_text" />

    <EditText
        android:id="@+id/hour_edit_text"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/startButton1"
        app:layout_constraintTop_toBottomOf="@+id/vibration_button" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/sound_button"
        app:layout_constraintStart_toEndOf="@+id/sound_button"
        app:layout_constraintTop_toTopOf="@+id/sound_button" />

    <Button
        android:id="@+id/sound_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="sound"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/vibration_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="viblation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sound_button" />


</androidx.constraintlayout.widget.ConstraintLayout>